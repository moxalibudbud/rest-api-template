    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^3.1.7",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^7.2.0",
    "http-status": "^1.8.0",
    "http-status-codes": "^2.3.0",
    "lodash": "^4.17.21",
    "moment-timezone": "^0.5.46",
    "mongoose": "^7.8.2",
    "parser": "^0.1.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.7",
