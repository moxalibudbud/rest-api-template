{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist",
    "start:dev": "ts-node src/index.ts",
    "watch": "nodemon --config nodemon.json",
    "build": "tsc --noEmit && sh -c '[ -d dist ] && rm -R dist' && babel src --out-dir dist --extensions \".ts,.js\"",
    "test": "jest tests --detectOpenHandles",
    "updatemods": "pnpm up @app/core --latest",
    "test:prod": "jest --testPathPattern=dist/tests --detectOpenHandles",
    "test:dev": "jest --testPathPattern=src/tests --detectOpenHandles",
    "test:ts": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
